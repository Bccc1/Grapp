<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dsi11.grapp.GangListActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_hintergrund"
        android:layout_gravity="center"
        android:background="@drawable/ic_hintergrund" />

    <TextView android:text="@string/title_gang_list" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gangList_textView_title"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:paddingBottom="20dp" />

    <TextView android:text="@string/text_gang_list" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gangList_textView_description"
        android:layout_below="@id/gangList_textView_title"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gangList_listView_gangs"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginBottom="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/gangList_textView_title" />

</RelativeLayout>
