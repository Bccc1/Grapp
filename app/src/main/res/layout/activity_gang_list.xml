<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    tools:context="com.dsi11.grapp.GangListActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_background"
        android:layout_gravity="center"
        android:background="@drawable/ic_hintergrund" />

    <com.dsi11.grapp.extlibs.TypefaceTextView
        android:text="@string/title_gang_list" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gangList_textView_title"
        android:textSize="55dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <com.dsi11.grapp.extlibs.TypefaceTextView
        android:text="@string/text_gang_list"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/gangList_textView_description"
        android:layout_below="@id/gangList_textView_title"
        android:layout_centerHorizontal="true"
        geekui:customTypeface="fonts/underground.ttf"/>

    <com.dsi11.grapp.extlibs.TypefaceTextView
        android:layout_width="wrap_content"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/gangList_listView_gangs"
        android:layout_marginBottom="45dp"
        android:layout_below="@+id/gangList_textView_description"
        android:layout_alignEnd="@+id/gangList_textView_title"
        android:layout_alignStart="@+id/gangList_textView_title"
        android:layout_centerInParent="true"
        android:smoothScrollbar="true"
        geekui:customTypeface="fonts/underground.ttf"/>

</RelativeLayout>
